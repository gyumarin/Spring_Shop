<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="com.human.biz.product.ProductVO" alias="product"></typeAlias>	
		<typeAlias type="com.human.biz.user.UserVO" alias="user"></typeAlias>
		<typeAlias type="com.human.biz.cart.CartVO" alias="cart"></typeAlias>
		<typeAlias type="com.human.biz.order.OrderVO" alias="order"></typeAlias>
		<typeAlias type="com.human.biz.order.OrderDetailVO" alias="orderDetail"></typeAlias>
	</typeAliases>
	
	<!-- SQL 명령어들이 저장된 SQL 파일 등록 -->
	<mappers>
		<mapper resource="mappings/product-mapping.xml"/>
		<mapper resource="mappings/cart-mapping.xml"/>
		<mapper resource="mappings/user-mapping.xml"/>
		<mapper resource="mappings/order-mapping.xml"/>
	</mappers>
</configuration>
